<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".rayanrenolds"
        android:background="@drawable/frmrgt">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:fillViewport="true"
                android:layout_marginTop="0dp"
                android:id="@+id/scrollView6">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="420dp"
                    android:layout_height="435dp"
                    android:src="@drawable/rayan"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:textColorLink="@android:color/black"
                    android:textSize="18sp"
                    android:text="Rayan Reynold"
                    android:background="@android:color/black"
                    android:textColor="@android:color/white"
                    android:textStyle="italic"/>

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="#090000"
                    android:textColorLink="@android:color/black"
                    android:textSize="18sp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/Ttxt"
                    android:textStyle="bold"/>

            <ListView xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/Jlst"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="20dp"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_marginTop="30dp"
                      android:textStyle="bold"
                      android:textSize="20sp"
                      android:gravity="center"
                      android:background="@android:color/black"
                      android:textColor="@android:color/holo_orange_light"
                      android:text="Some of his great movies are:"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:text="Deadpool"
                      android:textStyle="bold"
                      android:textSize="20sp"
                      android:layout_marginTop="20dp"
                      android:textColor="@android:color/holo_orange_light"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="606dp"
                    android:src="@drawable/deadpool"
                    android:id="@+id/DEDweb"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:text="X-Men Origins:Wolverine"
                      android:textStyle="bold"
                      android:textSize="20sp"
                      android:layout_marginTop="20dp"
                      android:textColor="@android:color/holo_orange_light"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="605dp"
                    android:src="@drawable/wolve"
                    android:id="@+id/WOLweb"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:text="PokÃ©mon Detective Pikachu"
                      android:textStyle="bold"
                      android:textSize="20sp"
                      android:layout_marginTop="20dp"
                      android:textColor="@android:color/holo_orange_light"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pika"
                    android:id="@+id/PIKAweb"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:text="The Proposal"
                      android:textStyle="bold"
                      android:textSize="20sp"
                      android:layout_marginTop="20dp"
                      android:textColor="@android:color/holo_orange_light"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="593dp"
                    android:src="@drawable/props"
                    android:id="@+id/PROPweb"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:text="Hitman's BodyGuard"
                      android:textStyle="bold"
                      android:textSize="20sp"
                      android:layout_marginTop="20dp"
                      android:textColor="@android:color/holo_orange_light"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="348dp"
                    android:src="@drawable/hbd"
                    android:id="@+id/HBDweb"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                    <ImageView
                            android:id="@+id/vBak"
                            style="@style/ActionButtonStyle"
                            android:src="@drawable/twitter"
                            android:scaleType="center"
                    />
                    <ImageView
                            android:id="@+id/tvBak"
                            style="@style/ActionButtonStyle"
                            android:src="@drawable/instagram"
                            android:scaleType="center"
                    />
                    <ImageView
                            android:id="@+id/tack"
                            style="@style/ActionButtonStyle"
                            android:src="@drawable/youtube"
                            android:scaleType="center"
                    />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>